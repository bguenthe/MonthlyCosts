<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/main_activity"
        tools:context=".MainActivity" android:visibility="visible" android:minHeight="250dp">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="3"
            android:id="@+id/betrag"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="7"
            android:id="@+id/kommentar"
            app:layout_constraintStart_toEndOf="@+id/betrag" android:layout_marginStart="0dp"
            app:layout_constraintTop_toTopOf="parent" android:inputType="text"/>
    <Button
            android:text="LBM"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:id="@+id/lbm"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/undo"/>
    <Button
            android:text="Kaffee"
            android:layout_height="wrap_content"
            android:id="@+id/kaffee"
            app:layout_constraintStart_toEndOf="@+id/lbm" android:layout_width="97dp"
            android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@+id/undo"/>
    <Button
            android:text="Haushalt"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:id="@+id/haushalt"
            app:layout_constraintStart_toEndOf="@+id/allo"
            app:layout_constraintTop_toTopOf="@+id/allo"/>
    <Button
            android:text="Allo"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:id="@+id/allo"
            app:layout_constraintStart_toStartOf="@+id/lbm"
            app:layout_constraintTop_toBottomOf="@+id/lbm"/>
    <Button
            android:text="DRINKS"
            android:layout_height="wrap_content"
            android:id="@+id/drinks"
            app:layout_constraintStart_toEndOf="@+id/haushalt"
            app:layout_constraintTop_toTopOf="@+id/haushalt" android:layout_width="97dp"/>
    <Button
            android:text="SONST"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:id="@+id/sonst"
            app:layout_constraintStart_toEndOf="@+id/drinks"
            app:layout_constraintTop_toBottomOf="@+id/rest"/>
    <Button
            android:text="BEAUTY"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:id="@+id/beauty"
            app:layout_constraintStart_toEndOf="@+id/rest"
            android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@+id/undo"/>
    <Button
            android:text="REST"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:id="@+id/rest"
            app:layout_constraintStart_toEndOf="@+id/kaffee"
            android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@+id/undo"/>
    <Button
            android:text="Undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/undo"
            app:layout_constraintStart_toEndOf="@+id/kommentar" android:layout_marginStart="0dp"
            app:layout_constraintTop_toTopOf="parent"
            />
    <Button
            android:text="INCOME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/income"
            app:layout_constraintStart_toEndOf="@+id/undo" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>